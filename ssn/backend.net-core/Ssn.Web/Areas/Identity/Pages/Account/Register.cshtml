@page

@model RegisterModel

@using (Html.BeginForm())
{
    <div>
        <div style="text-align: center">
            <h3>@Ssn.Web.Resources.Messages.RegisterNewUser</h3>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            @Html.LabelFor(model => model.Input.Email):
            <div>
                @Html.EditorFor(model => model.Input.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Input.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Input.ConfirmEmail):
            <div>
                @Html.EditorFor(model => model.Input.ConfirmEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Input.ConfirmEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Input.Password):
            <div>
                @Html.EditorFor(model => model.Input.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Input.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Input.ConfirmPassword):
            <div>
                @Html.EditorFor(model => model.Input.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Input.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="submit" value="@Ssn.Web.Resources.Messages.Register" class="btn btn-success" />
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
